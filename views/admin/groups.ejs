<div style="margin-bottom: 24px;">
    <h3 style="font-size: 20px; font-weight: 700; color: #0f172a; margin: 0 0 4px 0;">Groups</h3>
    <p style="color: #64748b; margin: 0;">Manage all groups</p>
</div>

<div class="stats-grid" style="margin-bottom: 24px;">
    <div class="stat-card">
        <div class="stat-info">
            <h3><%= totalGroups %></h3>
            <p>Total Groups</p>
        </div>
        <div class="stat-icon" style="background: linear-gradient(135deg, #14B8A6 0%, #0D9488 100%);">
            <i class="fas fa-layer-group"></i>
        </div>
    </div>
</div>

<div class="table-card">
    <div class="table-header"><h5>All Groups</h5></div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr><th>Name</th><th>Description</th><th>Created By</th><th>Members</th><th>Created</th></tr>
            </thead>
            <tbody>
                <% if (groups && groups.length > 0) { %>
                    <% groups.forEach(group => { %>
                        <tr>
                            <td><%= group.name %></td>
                            <td><%= group.description ? group.description.substring(0, 50) + '...' : 'N/A' %></td>
                            <td><%= group.createdBy ? group.createdBy.name : 'Unknown' %></td>
                            <td><%= group.membersCount || 0 %></td>
                            <td><%= new Date(group.createdAt).toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="5" style="text-align: center; color: #94a3b8;">No groups found</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
