# ============================================================================
# SYNCUP BACKEND ENVIRONMENT VARIABLES
# ============================================================================

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
PORT=5000
NODE_ENV=development
SERVER_URL=http://localhost:5000

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
MONGO_URI=mongodb://localhost:27017/syncup
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/syncup?retryWrites=true&w=majority

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d

# Log Encryption Key (32 bytes = 64 hex characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
LOG_ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# ----------------------------------------------------------------------------
# Redis Configuration (Optional)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------------------------------------------------------------------
# External Services
# ----------------------------------------------------------------------------

# Mapbox (for location services)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# SMS Service (Optional)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024 bytes

UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ----------------------------------------------------------------------------
# Agent Configuration
# ----------------------------------------------------------------------------

# Master Agent Settings
AGENT_CHECK_INTERVAL=30000
# Check interval in milliseconds (30000 = 30 seconds)

AGENT_REPORT_INTERVAL=60000
# Report interval in milliseconds (60000 = 1 minute)

# Memory Monitor Settings
MEMORY_ALERT_THRESHOLD=0.85
# Alert when memory usage exceeds 85%

# Performance Monitor Settings
CPU_ALERT_THRESHOLD=80
# Alert when CPU usage exceeds 80%

# Health Check Settings
HEALTH_CHECK_MAX_FAILURES=3
# Maximum consecutive failures before alert

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------

# Log Levels: error, warn, info, debug
LOG_LEVEL=info

# Log Encryption Mode: mask, encrypt, hash
LOG_ENCRYPTION_MODE=mask

# Enable/Disable specific loggers
ENABLE_SERVER_LOGS=true
ENABLE_AI_LOGS=true
ENABLE_CONNECTION_LOGS=true
ENABLE_DATABASE_LOGS=true
ENABLE_ERROR_LOGS=true

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 15 * 60 * 1000

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
# Comma-separated list of allowed origins

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
SESSION_SECRET=your_session_secret_change_this
SESSION_MAX_AGE=86400000
# 24 hours = 24 * 60 * 60 * 1000

# ----------------------------------------------------------------------------
# AI Configuration (if applicable)
# ----------------------------------------------------------------------------
AI_API_KEY=your_ai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# ----------------------------------------------------------------------------
# Notification Configuration
# ----------------------------------------------------------------------------
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your_fcm_server_key_here

# ----------------------------------------------------------------------------
# Backup Configuration
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
# Daily backup = 24 * 60 * 60 * 1000
BACKUP_PATH=./backups

# ----------------------------------------------------------------------------
# Development/Debug Settings
# ----------------------------------------------------------------------------
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# ----------------------------------------------------------------------------
# Production Settings
# ----------------------------------------------------------------------------
# Uncomment and configure for production deployment

# HTTPS Configuration
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Cluster Mode
# CLUSTER_ENABLED=true
# CLUSTER_WORKERS=4

# Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ----------------------------------------------------------------------------
# Notes
# ----------------------------------------------------------------------------
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. Generate strong random keys for production
# 4. Use environment-specific values (dev, staging, prod)
# 5. Keep sensitive keys secure and rotate regularly
